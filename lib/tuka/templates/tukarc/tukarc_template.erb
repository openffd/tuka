### Scripting
shopt -s extglob
isvalid () { if [[ -z "${!1}" || "${!1}" =~ ^\ +$ ]]; then return 1; else return 0; fi  }
if isvalid BITBUCKET_USERNAME && isvalid BITBUCKET_PASSWORD; then
  export BITBUCKET_USERNAME;
  export BITBUCKET_PASSWORD;
else
  echo -e "\n[Ã—] One of the required credentials you entered is invalid! Check the ~/.tukarc file";
  echo -e "\nRun 'tuka sc' to set this up again.";
fi
